{% extends "layout.njk" %}



{% block content %}
    <div class="card">
        <section 
        class="avatar" 
        style="background: url({{ member.avatar_url }}) no-repeat center center / cover">
        </section>

        <section class="details">
            <form  method="POST" action="/members?_method=PUT"> <!--Query string-->
                <h3>Editar Membro</h3>
                <input 
                type="hidden" 
                name="id" 
                value="{{ member.id }}">

                {% include 'members/fields.njk' %}

            

            </form>
            <form id="form-delete" action="/members?_method=DELETE" method="post">
                <input type="hidden" name="id" value ="{{ member.id }}">
                <button type="submit">Deletar</button>
            </form> 
            
            {% include '../delete-confirmation.njk'%}

        </section>
    
    
    </div>
        
    

{% endblock content %}
    